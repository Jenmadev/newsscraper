<div class="row">
    <div class="col-md 12">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-3">Saved Articles</h1>
                <p class="lead">Your Saved Articles</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="articles">
            {{#each articles}}
            <div class="row article-template">
                <div class="col-md-9 title">
                  <h2><a href="{{link}}"></a>{{title}}</h2>
                   <p>{{excerpt}}</p>
                </div>
                <div class="col-md-3 offset-1 button-div text-right">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" id="noteButton" data-id= "{{_id}}">NOTE</button>
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Notes For Article: {{_id}}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                </div>
                                <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                    <label for="message-text" class="form-control-label"></label>
                                    <textarea class="form-control" id="message-text"></textarea>
                                    </div>
                                </form>
                                </div>
                                <div class="modal-footer">
                                <button type="button" class="btn btn-primary" id="saveNote" data-id= "{{_id}}">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button id="deleteButton" data-id= "{{_id}}"> Delete</button>
                </div>
            </div>
        {{/each}}
        </div>
        <input type="hidden" id="is-saved" value="true">

    </div>
</div>

